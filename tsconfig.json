{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "outDir": "lib",
    "types": ["jest"],
    "jsx": "react",
    "plugins": [{ "name": "typescript-tslint-plugin" }],
    "resolveJsonModule": true
  },
  "include": ["src/*"]
}
